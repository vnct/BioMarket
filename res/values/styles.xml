<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="AppSettings" parent="AppTheme">
        
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_navigation_arrow_back_white</item>
          <item name="android:homeAsUpIndicator">@drawable/ic_action_navigation_arrow_back_white</item> 
          
          <item name="android:textColor">#000000</item>
          
        
               
 </style>
 
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
       
         <item name="android:textColorPrimary">@color/textcolorprimary</item>
	      <item name="android:textColor">@color/primary</item>
	      
	    
        <item name="android:actionModeCloseDrawable">@drawable/ic_action_navigation_arrow_back</item>
        
         <item name="android:actionBarItemBackground">@drawable/selectable_background_appthemegreen</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Appthemegreen</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Appthemegreen</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Appthemegreen</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Appthemegreen</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Appthemegreen</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_appthemegreen</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_appthemegreen</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Appthemegreen</item>
        
	    <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewAppTheme</item>
	
	    <item name="android:buttonStyle">@style/ButtonAppTheme</item>
	
	    <item name="android:imageButtonStyle">@style/ImageButtonAppTheme</item>
	
	    <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
        
    </style>
    
     <style name="ActionBar.Solid.Appthemegreen" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_appthemegreen</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_appthemegreen</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_appthemegreen</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Appthemegreen</item>
    </style>

    <style name="ActionBar.Transparent.Appthemegreen" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_appthemegreen</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Appthemegreen</item>
    </style>

    <style name="PopupMenu.Appthemegreen" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_appthemegreen</item>	
    </style>

    <style name="DropDownListView.Appthemegreen" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_appthemegreen</item>
    </style>

    <style name="ActionBarTabStyle.Appthemegreen" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_appthemegreen</item>
    </style>

    <style name="DropDownNav.Appthemegreen" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_appthemegreen</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_appthemegreen</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_appthemegreen</item>
    </style>
    
    <style name="ProgressBar.Appthemegreen" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_appthemegreen</item>
    </style>
    
    <style name="ActionButton.CloseMode.Appthemegreen" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_appthemegreen</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Appthemegreen.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Appthemegreen</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Appthemegreen</item>
    </style>
    
     <style name="AutoCompleteTextViewAppTheme" parent="android:Widget.AutoCompleteTextView">
      <item name="android:dropDownSelector">@drawable/apptheme_list_selector_holo_light</item>
	  <item name="android:background">@drawable/apptheme_edit_text_holo_light</item>
	  <item name="android:textColor">#000000</item>
  </style>

  <style name="ButtonAppTheme" parent="android:Widget.Button">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
	  <item name="android:minHeight">48dip</item>
	  <item name="android:minWidth">64dip</item>
	  <item name="android:textColor">#000000</item>
  </style>

  <style name="ImageButtonAppTheme" parent="android:Widget.ImageButton">
	  <item name="android:background">@drawable/apptheme_btn_default_holo_light</item>
  </style>

  <style name="SeekBarAppTheme" parent="android:Widget.SeekBar">
      <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
      <item name="android:minHeight">13dip</item>
      <item name="android:maxHeight">13dip</item>
      <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item>
      <item name="android:thumbOffset">16dip</item>
      <item name="android:paddingLeft">16dip</item>
      <item name="android:paddingRight">16dip</item>
  </style>

    
</resources>
